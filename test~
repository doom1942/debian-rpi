while [ "$1" != "" ]; do
    case $1 in
        -a | --arch )           shift
                                filename=$1
                                ;;
        -m | --model )          shift
                                interactive=$1
                                ;;
        -r | --release )        shift
                                release=$1
                                ;;
        -h | --help )           usage=1
                                exit
                                ;;
        * )                     usage=1
                                exit 1
    esac
    shift
done

echo $filename
echo $interactive
echo $release
echo $usage
